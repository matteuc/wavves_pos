<div class="row">
    <div class="col-sm-12">
        <div id="sales" class="card">
            <h5 class="card-header text-center">All Transactions</h5>
            <div id="products-content" class="card-body">
                {{#if sales.count}}
                    <ul class="list-group">
                        {{#each sales}}
                            {{> sale}}
                        {{/each}}
                    </ul>
                {{else}}
                    <div class="text-center">
                        <p class="card-text text-muted text-center">No sales yet... ðŸ˜¥</p>
                        <p><i class="fas fa-receipt fa-3x"></i></p>
                    </div>                
                {{/if}}

            </div>
        </div>
    </div>
</div>