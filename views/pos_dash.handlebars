<div class="row">
    <div class="col-sm-12 col-xl-8">
        <div id="products" class="card">
            <h5 class="card-header text-center">Available Products</h5>
            <div id="products-content" class="card-body">
                {{#if products.count}}
                    <ul class="list-group">
                        {{#each products}}
                            {{> product_pos }}
                        {{/each}}
                    </ul>
                {{else}}
                    <div class="text-center">
                        <p class="card-text text-muted text-center">No products yet... ðŸ˜¥</p>
                        <p><i class="fas fa-cubes fa-3x"></i></p>
                    </div>
                {{/if}}

            </div>
        </div>
    </div>
    <div class="col-sm-12 col-xl-4">
        <div id="cart" class="card text-center">
            <div class="card-header">
                Transaction Summary
            </div>
            <div id="cart-content" class="card-body">
                <div id="empty-cart-msg">
                    <p class="card-text text-muted text-center">No items yet. Add one!</p>
                    <p><i class="fas fa-cart-plus fa-3x"></i></p>
                </div>
            </div>
            <div class="card-footer text-muted">
                Total: $<span id="total">0.00</span>
                <div id="checkout-btn">
                    <a href="#" class="btn btn-info btn-block">Checkout <i class="fas fa-dollar-sign"></i></a>
                </div>

            </div>
        </div>
    </div>

</div>