<div class="row">
    <div class="col-sm-12 col-lg-8">
        <div id="products" class="card">
            <h5 class="card-header">Featured</h5>
            <div id="products-content" class="card-body">
                {{#if products.count}}
                    {{#each products}}
                        {{> product_pos}}
                    {{/each}}
                {{else}}
                    <p class="card-text text-muted text-center">"No products yet... ðŸ˜¥"</p>
                {{/if}}

            </div>
        </div>
    </div>
    <div class="col-sm-12 col-lg-4">
        <div id="cart" class="card text-center">
            <div class="card-header">
                Transaction Summary
            </div>
            <div id="cart-content" class="card-body">
                <div id="empty-cart-msg">
                    <p class="card-text text-muted text-center">No items yet. Add one!</p>
                    <p><i class="fas fa-cart-plus fa-2x"></i></p>
                </div>
            </div>
            <div class="card-footer text-muted">
                Total: $<span id="total">9.99</span>
                <div id="checkout-btn">
                    <a href="#" class="btn btn-info btn-block">Checkout <i class="fas fa-dollar-sign"></i></a>
                </div>

            </div>
        </div>
    </div>

</div>